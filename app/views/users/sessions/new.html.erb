<div class="login_page">
  <div class="login_box">
    <div class="title_box">
      <div class="title">Log in</div>
    </div>
    <div class="form_box">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field_area">
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field_email", :placeholder => "email" %>
          </div>
          <div class="field">
            <%= f.password_field :password, autocomplete: "current-password", class: "field_password", :placeholder => "password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        </div>
    </div>
    <div class="button_box">
      
      <div class="actions">
        <%= f.submit "Log in", class: "button" %>
        <%= render "users/shared/links" %>
      </div>
        <% end %>
      
    </div>
  </div>
</div>
